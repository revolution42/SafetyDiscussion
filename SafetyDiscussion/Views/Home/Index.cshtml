@{
    ViewBag.Title = "Home Page";
}
<div ng-controller="SafetyDiscussionController" class="container-fluid safety-discussion-wrapper">

    <a class="btn btn-default" href="#" role="button" ng-click="toggleForm()">{{buttonText}}</a>

    <form class="form-horizontal log-form" ng-submit="logRecord()" toggle>
        <div class="form-group">
            <label class="col-sm-2 control-label">Observer</label>
            <div class="col-sm-10">
                <input ng-model="observer" ng-required="true" class="form-control">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Date</label>
            <div class="col-sm-10">
                <div class="input-group">
                    <input ng-focus="openDate($event)" type="text" class="form-control" datepicker-popup="yyyy-MM-dd" ng-model="date" is-open="opened" ng-required="true" close-text="Close" />
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-default" ng-click="openDate($event)"><i class="glyphicon glyphicon-calendar"></i></button>
                    </span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Location</label>
            <div class="col-sm-10">
                <input ng-model="location" class="form-control" ng-required="true">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Colleague</label>
            <div class="col-sm-10">
                <input ng-model="colleage" class="form-control" ng-required="true">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Subject of Discussion</label>
            <div class="col-sm-10">
                <textarea ng-model="subject" class="form-control" rows="3" ng-required="true"></textarea>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Outcome of Discussion</label>
            <div class="col-sm-10">
                <textarea ng-model="outcome" class="form-control" rows="3" ng-required="true"></textarea>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Log Discussion</button>
            </div>
        </div>
    </form>


    <div class="table-responsive">
        <table class="table table-striped">
            <tr>
                <th>Observer</th>
                <th>Colleague</th>
                <th>Date</th>
                <th></th>
            </tr>
            <tr ng-repeat="discussion in discussionList">
                <td>{{ discussion.Observer }}</td>
                <td>{{ discussion.Colleague }}</td>
                <td>{{ discussion.Date }}</td>
                <td><a href="#" ng-click="openView(discussion)">View</a></td>
            </tr>
        </table>
    </div>
    <pagination total-items="totalItems" ng-model="currentPage" items-per-page="itemsPerPage" ng-change="pageChanged()"></pagination>


   
    <script type="text/ng-template" id="viewSafetyDiscussion">
        <div class="modal-header">
            <h3 class="modal-title">Safety Discussion</h3>
        </div>
        <div class="modal-body">
            <div class="row">
                <label class="col-sm-2 control-label">Observer</label>
                <div class="col-sm-10">
                    {{discussion.Observer}}
                </div>
            </div>
            <div class="row">
                <label class="col-sm-2 control-label">Date</label>
                <div class="col-sm-10">
                    {{discussion.Date}}
                </div>
            </div>

            <div class="row">
                <label class="col-sm-2 control-label">Location</label>
                <div class="col-sm-10">
                    {{discussion.Location}}
                </div>
            </div>

            <div class="row">
                <label class="col-sm-2 control-label">Colleague</label>
                <div class="col-sm-10">
                    {{discussion.Colleague}}
                </div>
            </div>

            <div>
                <label class="control-label">Subject of Discussion</label>
            </div>

            <div>
                {{discussion.Subject}}
            </div>

            <div>
                <label class="control-label">Outcome of Discussion</label>
                
            </div>

            <div>
                {{discussion.Outcomes}}
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-primary" ng-click="close()">OK</button>
        </div>
    </script>
</div>